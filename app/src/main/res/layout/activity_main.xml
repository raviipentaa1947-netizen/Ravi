<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Salary Calculator Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salary Calculator"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="12dp" />

    <!-- Created by Ravi (will fade in) -->
    <TextView
        android:id="@+id/createdByText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created by Ravi"
        android:textSize="18sp"
        android:textColor="#000000"
        android:visibility="invisible" />

</LinearLayout>
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/calc_btn"
            android:text="Calculate Salary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/accentTeal"
            android:textColor="@color/white"/>

        <LinearLayout>
            android:id="@+id/results_box"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
